@model IEnumerable<WebApplication1.Models.ProductModel>

<h2>Products</h2>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var product in Model)
    {
        <div class="card mx-3 mb-4" style="width: 11rem;">
            @if (string.IsNullOrEmpty(product.ImageUrl))
            {
                <img style="width:100%;height:300px" src="/Images/placeholder.png" class="card-img-top" alt="No Image">
            }
            else
            {
                <img style="width:100%;height:300px" src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName">
            }
            <div class="card-body">
                <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text">
                    <b>Price R:</b> @product.Price <br />
                </p>

                @if (product.Quantity > 0)
                {
                    <!-- Add to Cart Form -->
                    <form asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                }
                else
                {
                    <span style="border: 1px solid;padding: 5px 8px;color: red;border-radius: 5px;">Out of stock</span>
                }
            </div>
        </div>
    }

</div>