@model WebApplication1.Models.ProductModel

<h2>Add New Product</h2>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data" class="form-group">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control mb-2" required />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control mb-2" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" step="0.01" class="form-control mb-2" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="file">Upload Product Image</label>
        <input type="file" name="file" class="form-control mb-3" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

